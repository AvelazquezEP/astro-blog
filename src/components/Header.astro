<style>

    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;    
    }

    .nav-menu {
        list-style: none;
        display: flex;
        flex-direction: row;
        gap: 1rem;
    }

    .nav-menu li:hover {
        scale: 1.1;   
    }

</style>