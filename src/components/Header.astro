---
import Navigation from './Navigation.astro';
---

<header>
    <a href="/">
        <img src="" alt="Logo">
    </a>
    <nav>
        <ul class="nav-menu">
            <Navigation />
            <li>
                <Navigation href="/" name="Home"/>
            </li>
            <li>
                <Navigation href="/blog/" name="Blog"/>
            </li>
            <li>
                <Navigation href="/about/" name="About"/>
            </li>
        </ul>
